#!/bin/bash
#
# Execute the SLCS client
#
# Copyright (c) 2004-2009. Members of the EGEE Collaboration. 
# http://www.eu-egee.org
#
# $Id: slcs-init,v 1.4 2009/08/19 14:19:15 vtschopp Exp $
# $Name:  $
#
#set -x

# dertermine current directory
BINDIR=`dirname $0`
SLCS_HOME=`cd $BINDIR/..; pwd`

# source java conf
if [ -z $JAVA_HOME ]; then
    if [ -r /etc/java/java.conf ]; then
        . /etc/java/java.conf
    fi
fi

# /opt/glite/etc/glite-slcs-ui in CLASSPATH
SLCS_CP=$SLCS_HOME/etc/glite-slcs-ui

# glite slcs libs
SLCS_CP=$SLCS_CP:$SLCS_HOME/share/java/glite-slcs-common.jar:$SLCS_HOME/share/java/glite-slcs-ui.jar

# external slcs libs classpath
for ext_jar in $SLCS_HOME/externals/share/java/*.jar ; do
    EXTERNAL_CP=$EXTERNAL_CP:$ext_jar
done

# SLCS classpath
SLCS_CP=$SLCS_CP:$EXTERNAL_CP
#echo $SLCS_CP

if [ -z $JAVA_HOME ]; then
    java $JAVA_OPTS -classpath $SLCS_CP org.glite.slcs.SLCSInit $*
else
    $JAVA_HOME/bin/java $JAVA_OPTS -classpath $SLCS_CP org.glite.slcs.SLCSInit $*
fi

exit $?
