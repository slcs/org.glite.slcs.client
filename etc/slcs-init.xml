<SLCSClientConfiguration>

	<!-- Extended trust configuration -->
	<HttpClient>
        <!-- Absolute filename or file in CLASSPATH -->
	    <TrustStoreFile>truststore.switchaai.jks</TrustStoreFile>	
	</HttpClient>

	<!-- Default directory to store the key and certificate -->
	<StoreDirectory>${user.home}/.globus</StoreDirectory>
    <!-- Default filename for usercert.pem stored in StoreDirectory -->
    <UserCertFile>usercert.pem</UserCertFile>
    <!-- Default filename for userkey.pem stored in StoreDirectory -->
    <UserKeyFile>userkey.pem</UserKeyFile>
    <!-- Default private key size (512, 1024 or 2048 bits) -->
    <UserKeySize>1024</UserKeySize>
    
	<!-- Pseudo Metadata for Shibboleth -->
	<ShibbolethClientMetadata>
	
        <!-- The SLCS server (Shibboleth SP) -->
		<ServiceProvider id="slcs">
			<name>SLCS Server</name>
			<url>https://hestia.switch.ch/SLCS/login</url>
		</ServiceProvider>
		
        <!-- Shibboleth IdP definitions -->
		<IdentityProviders> 

			<IdentityProvider id="switch.ch">
				<name>SWITCH</name>
				<url>https://aai-logon.switch.ch/shibboleth-idp/SSO</url>
				<authentication type="CAS">
					<url>https://aai-logon.switch.ch/cas/login</url>
					<form name="login_form">
						<username>username</username>
						<password>password</password>					
					</form>
				</authentication>
			</IdentityProvider>
	
			<IdentityProvider id="vho-switchaai.ch">
				<name>Virtual Home Organization</name>
				<url>https://aai.vho-switchaai.ch/shibboleth-idp/SSO</url>
				<authentication type="CAS">
					<url>https://aai.vho-switchaai.ch/cas/login</url>
					<form name="login_form">
						<username>username</username>
						<password>password</password>					
					</form>
				</authentication>
			</IdentityProvider>
	
