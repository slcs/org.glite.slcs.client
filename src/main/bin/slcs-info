#!/bin/bash
#
# Execute the SLCS info
#
# Copyright (c) 2004-2009. Members of the EGEE Collaboration. 
# http://www.eu-egee.org
#
# $Id: slcs-info,v 1.5 2010/02/19 13:14:21 vtschopp Exp $
# $Name:  $
#
#set -x

# dertermine SLCS_HOME
# resolve links - $0 may be a softlink
PRG="$0"
while [ -h "$PRG" ]; do
    ls=`ls -ld "$PRG"`
    link=`expr "$ls" : '.*-> \(.*\)$'`
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=`dirname "$PRG"`/"$link"
    fi
done
PRGDIR=`dirname "$PRG"`
SLCS_HOME="$(cd "$PRGDIR/.." && pwd)"

# source java conf
if [ -z $JAVA_HOME ]; then
    if [ -r /etc/java/java.conf ]; then
        . /etc/java/java.conf
    fi
fi

# /opt/glite/etc/glite-slcs-ui in CLASSPATH
SLCS_CP=$SLCS_HOME/etc/glite-slcs-ui
# glite slcs libs
SLCS_CP=$SLCS_CP:$SLCS_HOME/share/java/glite-slcs-common.jar:$SLCS_HOME/share/java/glite-slcs-ui.jar

# external slcs libs classpath
EXTERNAL_CP=
for ext_jar in $SLCS_HOME/externals/share/java/*.jar ; do
    EXTERNAL_CP=$EXTERNAL_CP:$ext_jar
done

# SLCS classpath
SLCS_CP=$SLCS_CP:$EXTERNAL_CP
#echo $SLCS_CP

if [ -z $JAVA_HOME ]; then
    java $JAVA_OPTS -classpath $SLCS_CP org.glite.slcs.SLCSInfo $*
else
    $JAVA_HOME/bin/java $JAVA_OPTS -classpath $SLCS_CP org.glite.slcs.SLCSInfo $*
fi

exit $?
